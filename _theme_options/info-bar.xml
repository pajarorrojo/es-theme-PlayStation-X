<!-- Theme by pajarorrojo-->
<theme>
	<formatVersion>7</formatVersion>
	<view name="basic, detailed">

		<image name="md_marquee">
			<pos>0.49 0.368</pos>
			<maxSize>0.055 0.05</maxSize>
			<linearSmooth>true</linearSmooth>
			<zIndex>51</zIndex>
			<opacity>0.7</opacity>
			<visible>false</visible>
		</image>

		<image name="md_flag">
			<pos>0.490 0.425</pos>
			<maxSize>0.022 0.05</maxSize>
			<linearSmooth>true</linearSmooth>
			<zIndex>51</zIndex>
		</image>

		<text name="md_players">
			<origin>0.5 0.5</origin>
			<fontPath>./../_theme_inc/fonts/players.ttf</fontPath>
			<text>1</text>
			<size>0.03 0.03</size>
			<pos>0.49 0.470</pos>
			<alignment>center</alignment>
			<fontSize>0.034</fontSize>
			<fontSize ifSubset="aspect-ratio:4-3" tinyScreen="true">0.033</fontSize>
			<color>Ffffff</color>
			<zIndex>100</zIndex>
		</text>


		<image name="md_manual,md_nomanual">
			<origin>0.5 0.5</origin>
			<pos>0.49 0.515</pos>
			<path>./../_theme_inc/images/manual.png</path>
			<maxSize>0.02 0.03</maxSize>
			<color>${manualOnColor}</color>
			<zIndex>100</zIndex>

		</image>

		<image name="md_nomanual">
			<color>808080</color>
		</image>

		<image name="md_savestate,md_nosavestate">
			<origin>0.5 0.5</origin>
			<path>./../_theme_inc/images/SaveState.png</path>
			<pos>0.49 0.560</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>${savegameOnColor}</color>
			<zIndex>150</zIndex>
		</image>

		<image name="md_nosavestate">
			<color>808080</color>
		</image>

		<image name="md_cheevos,md_notcheevos">
			<origin>0.5 0.5</origin>
			<path>./../_theme_inc/images/Contest.png</path>
			<pos>0.49 0.605</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>${cheevosOnColor}</color>
			<zIndex>100</zIndex>
		</image>

		<image name="md_notcheevos">
			<color>808080</color>
		</image>
	</view>



	<view name="grid">

		<image name="md_flag">
			<pos>0.965 0.215</pos>
			<maxSize>0.022 0.05</maxSize>
			<linearSmooth>true</linearSmooth>
			<zIndex>51</zIndex>
		</image>

		<text name="md_players">
			<origin>0.5 0.5</origin>
			<fontPath>./../_theme_inc/fonts/players.ttf</fontPath>
			<text>1</text>
			<size>0.03 0.03</size>
			<pos>0.965 0.260</pos>
			<alignment>center</alignment>
			<fontSize>0.034</fontSize>
			<fontSize ifSubset="aspect-ratio:4-3" tinyScreen="true">0.033</fontSize>
			<color>Ffffff</color>
			<zIndex>100</zIndex>
		</text>


		<image name="md_manual,md_nomanual">
			<origin>0.5 0.5</origin>
			<pos>0.965 0.305</pos>
			<path>./../_theme_inc/images/manual.png</path>
			<maxSize>0.02 0.03</maxSize>
			<color>${manualOnColor}</color>
			<zIndex>100</zIndex>
		</image>


		<image name="md_nomanual">
			<color>808080</color>
		</image>

		<image name="md_savestate,md_nosavestate">
			<origin>0.5 0.5</origin>
			<path>./../_theme_inc/images/SaveState.png</path>
			<pos>0.965 0.350</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>${savegameOnColor}</color>
			<zIndex>150</zIndex>
		</image>


		<image name="md_nosavestate">
			<color>808080</color>
		</image>

		<image name="md_cheevos,md_notcheevos">
			<origin>0.5 0.5</origin>
			<path>./../_theme_inc/images/Contest.png</path>
			<pos>0.965 0.395</pos>
			<maxSize>0.02 0.03</maxSize>
			<color>${cheevosOnColor}</color>
			<zIndex>100</zIndex>
		</image>

		<image name="md_notcheevos">
			<color>808080</color>
		</image>
	</view>

	<view name="basic,detailed,grid">
		<image name="md_manual, md_savestate, md_cheevos">
			<storyboard>
				<animation property="opacity" from="0.6" to="1" duration="350" mode="easeInOut" autoreverse="true" repeat="forever"/>

			</storyboard>
		</image>
	</view>
</theme>
