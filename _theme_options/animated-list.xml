<theme>
  <formatVersion>7</formatVersion>  

<!-- DETALLADA -->
<view name="detailed">
  <control name="md_flag,md_players,md_manual,md_savestate">
    <storyboard event="open">
      <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
      <animation property="offsetY" from="0.5" to="0" begin="300" duration="300" mode="easeOutCubic" />
      <animation property="opacity" from="0" to="1" begin="300" duration="600" mode="easeInOut" />
    </storyboard>
  </control>

  <control name="md_flag,md_players">
    <storyboard event="activateNext">
      <animation property="opacity" from="0" to="1" duration="400" mode="linear" />
    </storyboard>
    <storyboard event="activatePrev">
      <animation property="opacity" from="0" to="1" duration="400" mode="linear" />
    </storyboard>
    <storyboard event="deactivateNext">
      <animation property="opacity" to="0" duration="400" mode="linear" />
    </storyboard>
    <storyboard event="deactivatePrev">
      <animation property="opacity" to="0" duration="400" mode="linear" />
    </storyboard>
  </control>

  <control name="md_image, md_name, md_description, md_genre, md_developer, md_releasedate, md_publisher, md_rating, image-detailed, thumbnail-detailed, boxart-detailed, marquee-detailed, boxback-detailed, fanart-detailed, titleshot-detailed, cartridge-detailed, linea-infos,">
    <storyboard event="open">
      <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
      <animation property="offsetX" from="0.5" to="0" begin="300" duration="300" mode="easeOutCubic" />
      <animation property="opacity" from="0" to="1" begin="300" duration="600" mode="easeInOut" />
    </storyboard>
    <storyboard event="activateNext">
      <animation property="opacity" to="0" duration="1" mode="linear" />
      <animation property="offsetY" from="0.78" to="0" duration="550" mode="easeOutCubic" />
      <animation property="opacity" from="0" to="1" duration="800" mode="easeOut" />
    </storyboard>
    <storyboard event="activatePrev">
      <animation property="offsetY" from="-0.78" to="0" duration="550" mode="easeOutCubic" />
      <animation property="opacity" from="0" to="1" duration="800" mode="easeOut" />
    </storyboard>
    <storyboard event="deactivateNext">
      <animation property="offsetY" to="-0.78" duration="500" mode="easeOutCubic" />
      <animation property="opacity" to="0" duration="400" mode="easeOut" />
    </storyboard>
    <storyboard event="deactivatePrev">
      <animation property="offsetY" to="0.78" duration="500" mode="easeOutCubic" />
      <animation property="opacity" to="0" duration="400" mode="easeOut" />
    </storyboard>
  </control>

  <control name="background-gamelist">
    <storyboard event="open">
        <animation property="scale" from="1" to="1.3" begin="0"  duration="30000" mode="easeOut"/>
    </storyboard>
    <storyboard event="activateNext">
      <animation property="offsetY" from="0.1" begin="0" to="0" duration="400" mode="easeOut" />
      <animation property="scale"  from="1" to="1.3" begin="0" duration="30000" mode="easeOut" />
    </storyboard>
    <storyboard event="activatePrev">
      <animation property="offsetY" from="-0.1" begin="0" to="0" duration="400" mode="easeOut" />
      <animation property="scale"  from="1" to="1.3" begin="0" duration="30000" mode="easeOut" />
    </storyboard>
    <storyboard event="deactivateNext">
      <animation property="opacity" to="0" begin="0" duration="400" mode="easeOut" />
    </storyboard>
    <storyboard event="deactivatePrev">
      <animation property="opacity" to="0" begin="0" duration="400" mode="easeOut" />
    </storyboard>
  </control>

</view>


  <!-- GRID -->

  <view name="grid">
    <control name="md_image, image-grid, image-carousel, image-classic, image-single, thumbnail-grid, thumbnail-carousel, thumbnail-classic, thumbnail-single, marquee-grid, marquee-carousel, marquee-classic, marquee-single, boxart-grid, boxart-carousel, boxart-classic, boxart-single, cartridge-grid, cartridge-carousel, cartridge-classic, cartridge-single, fanart-grid, fanart-carousel, fanart-classic, fanart-single, titleshot-grid, titleshot-carousel, titleshot-classic, titleshot-single, md_name, md_flag, md_nosavestate, md_savestate, md_nomanual, md_manual, md_players, md_description, md_genre, md_developer, md_releasedate, md_publisher, md_rating, system-name, console-grid-view, image-full-grid thumbnail-full-grid, boxart-full-grid, marquee-full-grid, boxback-full-grid, fanart-full-grid, titleshot-full-grid, cartridge-full-grid,gamename-full-grid, gamename-grid, gamename-single, boxback-carousel, boxback-grid, boxback-classic, boxback-single">
      <storyboard event="open">
        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="offsetY" from="-0.5" to="0" begin="50" duration="500" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" begin="100" duration="600" mode="easeInOut" />
      </storyboard>
      <storyboard event="activateNext">
        <animation property="offsetX" from="0.30" to="0" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="300" mode="easeOut" />
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="offsetX" from="-0.30" to="0" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="300" mode="easeOut" />
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="opacity" to="0" duration="100" mode="easeOut" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="opacity" to="0" duration="100" mode="easeOut" />
      </storyboard>
    </control>
  
  <control name="background-gamelist">
    <storyboard event="open">
        <animation property="offsetY" to="0.15" duration="30000" mode="ease"/>
        <animation property="scale" to="1.3"  duration="30000" mode="easeOut"/>
    </storyboard>
    <storyboard event="activateNext">
      <animation property="offsetX" from="0.02" to="0" begin="0" duration="400" mode="easeOut" />
        <animation property="offsetY" begin="100"  to="0.15" duration="30000" mode="ease"/>
        <animation property="scale" begin="100"  to="1.3" duration="30000" mode="linear"/>
      </storyboard>
    <storyboard event="activatePrev">
      <animation property="offsetX" from="-0.02" to="0"  duration="400" mode="easeOut" />
      <animation property="offsetY" begin="100"  to="-0.15" duration="30000" mode="ease"/>
      <animation property="scale"  to="1.3" begin="100" duration="30000" mode="easeOut" />
    </storyboard>
      <storyboard event="deactivateNext">
        <animation property="opacity" begin="100" to="0" duration="200" mode="easeOut" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="opacity" begin="100" to="0" duration="200" mode="easeOut" />
      </storyboard>
  </control>

  </view>




  <!-- classic -->

  <customView name="classic">

    <control name="marco-activo">
      <storyboard event="open">
        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="opacity" begin="300" from="0" to="1.0" duration="500" mode="easeInOut" />
        <animation property="opacity" from="1" to="0.3" begin="2000" duration="500" mode="easeInOut" autoreverse="true" repeat="forever" />      
      </storyboard>
      <storyboard event="activateNext">
        <animation property="scale" from="0.94" to="1" duration="300" mode="bump" />
        <animation property="offsetX" to="-0.003" duration="150" mode="ease" autoreverse="true" />
        <animation property="offsetY" to="-0.008" duration="150" mode="ease" autoreverse="true" />
        <animation property="opacity" from="0" to="1.0" duration="500" mode="easeInOut" />
        <animation property="opacity" from="1" to="0.3" begin="1000" duration="500" mode="easeInOut" autoreverse="true" repeat="forever" />      
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="scale" from="0.94" to="1" duration="300" mode="bump" />
        <animation property="offsetX" to="-0.003" duration="150" mode="ease" autoreverse="true" />
        <animation property="offsetY" to="-0.008" duration="150" mode="ease" autoreverse="true" />
        <animation property="opacity" from="0" to="1.0" duration="500" mode="easeInOut" />
        <animation property="opacity" from="1" to="0.3" begin="1000" duration="500" mode="easeInOut" autoreverse="true" repeat="forever" />      
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
    </control>

    <control name="start">
      <storyboard event="open">
        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="opacity" begin="300" from="0" to="1.0" duration="500" mode="easeInOut" />
      </storyboard>
      <storyboard event="activateNext">
        <animation property="opacity" from="0" to="1" duration="500" mode="easeIn" />
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="opacity" from="0" to="1" duration="500" mode="easeIn" />
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
    </control>

    <control name="gamename-classic">
      <storyboard event="open">
        <animation property="offsetY" from="0.06" to="0" duration="500" mode="easeOut" />
        <animation property="opacity" from="0" to="1" duration="500" mode="linear" />
      </storyboard>
      <storyboard event="activateNext">
        <animation property="offsetY" from="0.06" to="0" duration="300" mode="easeOut" />
        <animation property="opacity" from="0" to="1" duration="300" mode="linear" />
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="offsetY" from="0.06" to="0" duration="300" mode="easeOut" />
        <animation property="opacity" from="0" to="1" duration="300" mode="linear" />
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
    </control>

    <control name="marquee-classic-view, thumbnail-classic-view, console-classic-view">
      <storyboard event="open">
        <animation property="scale" from="0.9" to="1.0" duration="350" mode="bump" />
      </storyboard>
      <storyboard event="activateNext">
        <animation property="scale" from="0.9" to="1.0" duration="350" mode="bump" />
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="scale" from="0.9" to="1.0" duration="350" mode="bump" />
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
      </control>

  </customView>

  
  <!-- single -->

  <customView name="single">

    <control name="marquee-single-view, thumbnail-single-view, console-single-view">
      <storyboard event="open">
        <animation property="scale" from="0.9" to="1.0" duration="350" mode="bump" />
      </storyboard>
      <storyboard event="activateNext">
        <animation property="scale" from="0.9" to="1.0" duration="350" mode="bump" />
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="scale" from="0.9" to="1.0" duration="350" mode="bump" />
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="opacity" to="0" duration="100" mode="linear" />
      </storyboard>
      </control>

      <control name="start-single">
        <storyboard event="open">
          <animation property="offsetY" from="0.1" to="0" begin="50" duration="600" mode="easeOutCubic" />
          <animation property="opacity" from="1" to="0.6" begin="1000" duration="500" mode="easeInOut" autoreverse="true" repeat="forever" />      
        </storyboard>
        <storyboard event="activateNext">
          <animation property="offsetX" from="0.30" to="0" duration="200" mode="easeOutCubic" />
          <animation property="opacity" from="1" to="0.6" begin="500" duration="500" mode="easeInOut" autoreverse="true" repeat="forever" />      
        </storyboard>
        <storyboard event="activatePrev">
          <animation property="offsetX" from="-0.30" to="0" duration="200" mode="easeOutCubic" />
          <animation property="opacity" from="0" to="1" duration="200" mode="easeOut" />
          <animation property="opacity" from="1" to="0.6" begin="500" duration="500" mode="easeInOut" autoreverse="true" repeat="forever" />      
        </storyboard>
        <storyboard event="deactivateNext">
          <animation property="offsetX" from="0.30" to="0" duration="200" mode="easeOutCubic" />
          <animation property="opacity" to="0" duration="100" mode="linear" />
        </storyboard>
        <storyboard event="deactivatePrev">
          <animation property="offsetX" from="0" to="0.1" duration="200" mode="easeOutCubic" />
          <animation property="opacity" to="0" duration="100" mode="linear" />
        </storyboard>
      </control>

  </customView>


  <!-- ocultar imagen principal de juego si la opcion video es ventana (revisar opcion defecto en image-sorces) -->

  <view name="detailed">
    <image ifSubset="game-video:default|window|inside" name="image-detailed, thumbnail-detailed, marquee-detailed, boxart-detailed,cartridge-detailed, fanart-detailed, titleshot-detailed, boxback-detailed">
       <storyboard event="open">
          <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
          <animation property="offsetX" from="0.5" to="0" begin="300" duration="300" mode="easeOutCubic" />
          <animation property="opacity" from="0" to="1" begin="300" duration="600" mode="easeInOut" />
          <animation enabled="exists({game:video})" property="opacity" from="1" to="0" begin="800" duration="600" mode="easeInOut" />
       </storyboard>
       <storyboard event="activateNext">
          <animation property="opacity" to="0" duration="1" mode="linear" />
          <animation property="offsetY" from="0.78" to="0" duration="550" mode="easeOutCubic" />
          <animation property="opacity" from="0" to="1" duration="800" mode="easeOut" />
          <animation enabled="exists({game:video})" property="opacity" from="1" to="0" begin="800" duration="600" mode="easeInOut" />
       </storyboard>
       <storyboard event="activatePrev">
          <animation property="offsetY" from="-0.78" to="0" duration="550" mode="easeOutCubic" />
          <animation property="opacity" from="0" to="1" duration="800" mode="easeOut" />
          <animation enabled="exists({game:video})" property="opacity" from="1" to="0" begin="800" duration="600" mode="easeInOut" />
       </storyboard>
       <storyboard event="deactivateNext">
          <animation property="offsetY" to="-0.78" duration="500" mode="easeOutCubic" />
          <animation property="opacity" to="0" duration="400" mode="easeOut" />
       </storyboard>
       <storyboard event="deactivatePrev">
          <animation property="offsetY" to="0.78" duration="500" mode="easeOutCubic" />
          <animation property="opacity" to="0" duration="400" mode="easeOut" />
       </storyboard>
    </image>
    </view>


