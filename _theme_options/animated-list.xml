<theme>
  <formatVersion>7</formatVersion>

  <view name="basic, detailed, grid">


    <image name="consoles" extra="true">
      <storyboard>
        <animation property="offsetX" from="-0.2" to="0" duration="700" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="700" mode="easeIn" />
      </storyboard>
    </image>

    <image name="logo" extra="true">
      <storyboard>
        <animation property="opacity" from="0" duration="700" mode="easeIn" />
      </storyboard>
    </image>

    <image name="background" extra="static">
      <storyboard>
        <animation property="opacity" from="0.5" to="1" duration="500" mode="easeOut" />
      </storyboard>
    </image>


  </view>

  <view name="grid">

    <control name="md_image, md_thumbnail, md_marquee, md_boxart, md_cartridge, md_fanart, md_titleshot">
      <clipRect>0 0.1 1 0.78</clipRect>

      <storyboard event="open">
        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="offsetY" from="-0.5" to="0" begin="300" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" begin="300" duration="600" mode="easeInOut" />
      </storyboard>
       <!-- la animacion opacity solo funciona en md_image
        
        <storyboard event="open" ifSubset="game-video:window|background, video-gamelist-delay:0sec|05sec|1sec">
        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="offsetY" from="-0.5" to="0" begin="300" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" begin="300" duration="600" mode="easeInOut" />
        <animation property="opacity" to="0.2" duration="1500" begin="1200" mode="easeOutCubic" />
      </storyboard>
      <storyboard event="open" ifSubset="game-video:window|background, video-gamelist-delay:2sec|3sec">
        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="offsetY" from="-0.5" to="0" begin="300" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" begin="300" duration="600" mode="easeInOut" />
        <animation property="opacity" to="0.2" duration="1500" begin="2400" mode="easeOutCubic" />
      </storyboard>
    -->


      <storyboard event="activateNext">
        <animation property="offsetX" from="0.78" to="0" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="300" mode="easeOut" />
      </storyboard>  
      <storyboard event="activatePrev">
        <animation property="offsetX" from="-0.78" to="0" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="300" mode="easeOut" />
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="offsetX" to="-0.78" duration="300" mode="easeOutCubic" />
        <animation property="opacity" to="0" duration="300" mode="easeOut" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="offsetX" to="0.78" duration="300" mode="easeOutCubic" />
        <animation property="opacity" to="0" duration="300" mode="easeOut" />
      </storyboard>

    </control>


    <control name="md_name, md_description, md_genre, md_developer, md_releasedate, md_publisher, md_boxart, md_marquee, md_thumbnail,md_boxback,md_fanart,md_titleshot,md_cartridge, md_rating,md_players,md_manual,md_nomanual,md_flag,md_savestate,md_nosavestate">
      <clipRect>0 0.1 1 0.78</clipRect>
      <storyboard event="open">
        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="offsetY" from="-0.5" to="0" begin="300" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" begin="300" duration="600" mode="easeInOut" />
      </storyboard>
      <storyboard event="activateNext">
        <animation property="offsetX" from="0.78" to="0" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="300" mode="easeOut" />
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="offsetX" from="-0.78" to="0" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="300" mode="easeOut" />
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="offsetX" to="-0.78" duration="300" mode="easeOutCubic" />
        <animation property="opacity" to="0" duration="300" mode="easeOut" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="offsetX" to="0.78" duration="300" mode="easeOutCubic" />
        <animation property="opacity" to="0" duration="300" mode="easeOut" />
      </storyboard>
    </control>

    <imagegrid name="gamegrid">
      <opacity>0</opacity>
      <storyboard>

        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="y" from="1" begin="300" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0.8" to="1" begin="300" duration="600" mode="easeInOut" />

      </storyboard>
    </imagegrid>

  </view>

  <view name="detailed">

    <control name="md_name, md_image, md_description, md_genre, md_developer, md_releasedate, md_publisher, md_rating, md_boxart, md_marquee, md_thumbnail, md_boxback, md_fanart, md_titleshot,md_cartridge,linea-infos,">
      <clipRect>0 0.16 1 0.78</clipRect>
      <storyboard event="activateNext">
        <animation property="opacity" to="0" duration="1" mode="linear" />
        <animation property="offsetY" from="0.78" to="0" duration="550" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="800" mode="easeOut" />
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="offsetY" from="-0.78" to="0" duration="550" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" duration="800" mode="easeOut" />
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="offsetY" to="-0.78" duration="500" mode="easeOutCubic" />
        <animation property="opacity" to="0" duration="400" mode="easeOut" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="offsetY" to="0.78" duration="500" mode="easeOutCubic" />
        <animation property="opacity" to="0" duration="400" mode="easeOut" />
      </storyboard>
    </control>

    <control name="md_name, md_image, md_description, md_genre, md_developer, md_releasedate, md_publisher, md_rating, md_boxart, md_marquee, md_thumbnail, md_boxback, md_fanart, md_titleshot,md_cartridge, linea-infos">
      <opacity>0</opacity>
      <clipRect>0 0.16 1 0.78</clipRect>
      <storyboard event="open">
        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="offsetX" from="0.5" to="0" begin="300" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" begin="300" duration="600" mode="easeInOut" />
      </storyboard>
    </control>

    <textlist name="gamelist">
      <storyboard>
        <animation property="x" to="0" begin="300" duration="300" mode="easeOutCubic" />
        <animation property="opacity" to="1" begin="300" duration="600" mode="ease" />
      </storyboard>
    </textlist>

    <control name="md_flag,md_players,md_manual,md_nomanual,md_savestate,md_nosavestate">
      <clipRect>0 0.16 1 0.78</clipRect>
      <storyboard event="open">
        <animation property="opacity" from="0" to="0" duration="100" mode="linear" />
        <animation property="offsetY" from="0.5" to="0" begin="300" duration="300" mode="easeOutCubic" />
        <animation property="opacity" from="0" to="1" begin="300" duration="600" mode="easeInOut" />
      </storyboard>

    </control>

    <control name="md_flag,md_players">
      <clipRect>0 0.16 1 0.78</clipRect>
      <storyboard event="activateNext">
        <animation property="opacity" from="0" to="1" duration="400" mode="linear" />
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="opacity" from="0" to="1" duration="400" mode="linear" />
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="opacity" to="0" duration="400" mode="linear" />
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="opacity" to="0" duration="400" mode="linear" />
      </storyboard>
    </control>


  </view>

</theme>